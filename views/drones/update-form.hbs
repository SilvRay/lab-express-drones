<h2>Update the drone</h2>
<form action="/drones/{{id}}/edit" method="POST">
  <label>
    Name:
    <input type="text" name="name" required value="{{name}}" />
  </label>
  <label>
    Propellers:
    <input type="number" name="propellers" min="0" value="{{propellers}}"/>
  </label>
  <label>
    Max Speed:
    <input type="number" name="maxSpeed" min="0" value="{{maxSpeed}}" />
  </label>

  <button>Update Drone</button>

</form>